generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  nameEn        String
  nameJp        String
  price         Float
  imageUrl      String
  category      String
  subcategory   String?
  isActive      Boolean  @default(true)
  isAddon       Boolean  @default(false)
  allowedAddons String[] @default([]) // Array of addon IDs that can be added to this item
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  orderItems OrderItem[]
  cartItems  CartItem[]

  @@map("menu_items")
}

model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String      @unique
  userId      String
  displayName String
  tableNumber String
  lineUserId  String?
  items       OrderItem[]
  total       Float
  status      OrderStatus @default(Received)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("orders")
  @@index([status])
  @@index([createdAt])
  @@index([lineUserId])
}

model OrderItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String   @db.ObjectId
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  itemId      String   @db.ObjectId
  item        MenuItem @relation(fields: [itemId], references: [id])
  name        String
  quantity    Int
  price       Float
  parentItemId String? @db.ObjectId

  @@map("order_items")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @unique
  displayName   String
  email         String?
  phone         String?
  password      String?  // For admin login
  role          UserRole @default(Customer)
  totalOrders   Int      @default(0)
  totalSpent    Float    @default(0)
  lastOrderDate DateTime?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
  @@index([role])
  @@index([isActive])

  cart Cart?
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [userId])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("carts")
}

model CartItem {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  cartId     String   @db.ObjectId
  cart       Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  menuItemId String   @db.ObjectId
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  quantity   Int
  price      Float
  totalAmount Float
  addons     Json?    // Array of ICartItem for addons
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("cart_items")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   // Original name field for fallback
  nameEn    String   @default("")
  nameJp    String   @default("")
  imageUrl  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
  @@index([isActive])
}

enum OrderStatus {
  Received
  Preparing
  Ready
  Completed
}

enum UserRole {
  Customer
  Staff
  Manager
  Admin
}
